<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gamesleep"
    tools:context=".gamesleep.GameSleepActivity">


    <TextView
        android:id="@+id/count_down"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:gravity="bottom|center"
        android:text="@string/_00_15"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/character1"
        android:layout_width="343dp"
        android:layout_height="405dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/character_male_1" />

    <ImageView
        android:id="@+id/character2"
        android:layout_width="343dp"
        android:layout_height="405dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/character_male_2"
        android:layout_marginStart="64dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character3"
        android:layout_width="343dp"
        android:layout_height="405dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/character_male_3"
        android:layout_marginStart="64dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character4"
        android:layout_width="343dp"
        android:layout_height="405dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/character_male_4"
        android:layout_marginStart="64dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/blanket"
        android:layout_width="372dp"
        android:layout_height="686dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/blanket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blanket" />

    <ImageView
        android:id="@+id/characterSit"
        android:layout_width="362dp"
        android:layout_height="426dp"
        android:contentDescription="@string/todo"
        android:rotation="-90"
        android:visibility="invisible"
        app:srcCompat="@drawable/xiaomingsit"
        android:layout_marginStart="152dp"
        android:layout_marginTop="114dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlarm"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="488dp"
        android:width="200dp"
        android:background="@drawable/btn_alarm_custom"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>